@model AtlasAir.Models.Reservation

@{
    ViewData["Title"] = "Adicionar Reserva";
}

<h1>Adicionar Reserva</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ReservationCode" class="control-label">Código da Reserva</label>
                <input asp-for="ReservationCode" class="form-control" />
                <span asp-validation-for="ReservationCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CustomerId" class="control-label">Cliente</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                    <option value="">-- Selecione um cliente</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="SeatId" class="control-label">Assento</label>
                <select asp-for="SeatId" class="form-control" asp-items="ViewBag.SeatId">
                    <option value="">-- Selecione um assento</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="FlightId" class="control-label">Voo</label>
                <select asp-for="FlightId" class="form-control" asp-items="ViewBag.FlightId">
                    <option value="">-- Selecione um voo</option>
                </select>
            </div>

            <div class="mb-3 mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}