@model IEnumerable<AtlasAir.Models.Reservation>

@{
    ViewData["Title"] = "Reservas";
}

<h1>Lista de Reservas</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Adicionar Reserva</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Código da reserva
            </th>
            <th>
                Status
            </th>
            <th>
                Data da reserva
            </th>
            <th>
                Data de cancelamento
            </th>
            <th>
                Cliente
            </th>
            <th>
                Assento
            </th>
            <th>
                Voo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CancellationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seat.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flight.Id)
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Remover</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>